<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.openo.sdno.mss.init.mybatis.mappers.RelationMapper">
	<resultMap id="BaseResultMap" type="org.openo.sdno.mss.init.mybatis.pojo.RelationPojo">
		<id column="bkt_name" property="bktName" jdbcType="VARCHAR" />
		<result column="rmspec" property="rmspec" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		bkt_name, rmspec
	</sql>
	
	<update id="createTable">
        CREATE TABLE IF NOT EXISTS tbl_relation (
			bkt_name VARCHAR (32) NOT NULL,
			rmspec text  NOT NULL,
			PRIMARY KEY (bkt_name)
		)
	</update>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from tbl_relation
		where bkt_name = #{bktName,jdbcType=VARCHAR}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		delete from
		tbl_relation
		where bkt_name = #{bktName,jdbcType=VARCHAR}
	</delete>
	<insert id="insert" parameterType="org.openo.sdno.mss.init.mybatis.pojo.RelationPojo">
		insert into tbl_relation
		(bkt_name, rmspec)
		values (#{bktName,jdbcType=VARCHAR},
		#{rmspec,jdbcType=VARCHAR})
	</insert>
	<insert id="insertSelective" parameterType="org.openo.sdno.mss.init.mybatis.pojo.RelationPojo">
		insert into tbl_relation
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bktName != null">
				bkt_name,
			</if>
			<if test="rmspec != null">
				rmspec,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bktName != null">
				#{bktName,jdbcType=VARCHAR},
			</if>
			<if test="rmspec != null">
				#{rmspec,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="org.openo.sdno.mss.init.mybatis.pojo.RelationPojo">
		update tbl_relation
		<set>
			<if test="rmspec != null">
				rmspec = #{rmspec,jdbcType=VARCHAR},
			</if>
		</set>
		where bkt_name = #{bktName,jdbcType=VARCHAR}
	</update>
	<update id="updateByPrimaryKey" parameterType="org.openo.sdno.mss.init.mybatis.pojo.RelationPojo">
		update
		tbl_relation
		set rmspec = #{rmspec,jdbcType=VARCHAR}
		where bkt_name =
		#{bktName,jdbcType=VARCHAR}
	</update>
</mapper>